<div class='row'>
  <div class='col-md-12'>
    <p></p>
    {{#if message}}
      <p> {{message}} </p>
    {{/if}}
    <form action="/news" enctype="multipart/form-data" method="post" class="form-horizontal">
      <div class="form-group">
        <label for="inputNewsNumber" class="col-sm-2 control-label">News Number</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="inputNewsNumber" name="subDir">
        </div>
        <div class="col-sm-6">
          <p class="info" id="infoNewsNumber"></p>
        </div>
      </div>
      <div class="form-group">
        <label for="inputWXURL" class="col-sm-2 control-label">WXURL</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="inputWXURL" name="wxurl">
        </div>
        <div class="col-sm-6">
          <p class="info" id="infoWXURL"></p>
        </div>
      </div>
      <div class="form-group">
        <label for="inputCoverPicture" class="col-sm-2 control-label">Cover Picture</label>
        <div class="col-sm-4">
          <input type="file" class="form-control" required accept = "image/*" id="inputCoverPicture" name="coverpicture">
        </div>
        <div class="col-sm-6">
          <p class="info" id="infoCoverPicture"></p>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>