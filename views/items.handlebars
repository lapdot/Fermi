<div class='row'>
  <div class='col-md-12'>
    {{#if message}}
      <p>{{message}}</p>
    {{/if}}
  	<h3>{{item.name}}</h3>
    <p>学期: {{item.semester}}</p>
    <p>开始日期:{{item.start_date}}</p>
    <p>时间: {{item.time_description}}</p>
    <p>地点: {{item.place}}</p>
    <p>教师: {{item.teacher_description}}</p>
    <p>次数: {{item.total_times}}</p>
    <p>总价: {{item.total_price}}</p>
    <p>备注: {{item.remark}}</p>
    <p>总名额: {{item.amount}}</p>
    <p>剩余名额: {{item.available_amount}}</p>
    <p>报名截止日期: {{item.overdue}} </p>
    {{#if teacher}}
      <p><a href="/items/{{item.id}}/edit">修改课程</a></p>
      <table class="table table-striped">
        <tr><td>Name</td><td>Phone Number</td></tr>
        {{#each users}}
          <tr>
            <td><a href="/users/{{this.id}}">{{this.realname}}</a></td>
            <td>{{this.phone1}}</td>
          </tr>
        {{/each}}
      </table>
    {{else}}
      <form action="/buy" method="post" style="display: inline-block">
        <input type="hidden" name="id" value="{{item.id}}">
        <button type="submit" class="btn btn-default">直接购买</button>
      </form>
      <form action="/cart" method="post" style="display: inline-block">
        <input type="hidden" name="id" value="{{item.id}}">
        <button type="submit" class="btn btn-default">加入购物车</button>
      </form>
    {{/if}}
  </div>
</div>