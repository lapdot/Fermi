<div class='row'>
  <div class='col-md-12'>
    <h3>课程列表</h3>
    {{#if message}}
      <p>{{message}}</p>
    {{/if}}
    <table class="table table-striped">
      <tr><td>Name</td><td>Content</td></tr>
      {{#each items}}
        <tr>
          <td><a href="/items/{{this.id}}">{{this.name}}</a></td>
          <td>{{this.content}}</td>
          <td>
            <form action="/buy" method="post" style="display: inline-block">
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn btn-default">直接购买</button>
            </form>
          </td>
          <td>
            <form action="/cart" method="post" style="display: inline-block">
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class="btn btn-default">加入购物车</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>